name: Publish Release

on:
  push:
    branches: [ "main" ]

jobs:
  build-and-release:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up SFML dependencies (skip build, package files)
        run: |
          mkdir -p release/bin
          mkdir -p release/assets/textures
          mkdir -p release/assets/sounds
          # Copia binarios si existen
          if [ -f bin/TetrisCreativo.exe ]; then cp bin/TetrisCreativo.exe release/bin/; fi
          # Copia assets
          if [ -d assets ]; then cp -r assets/* release/assets/; fi
          # Copia README
          cp README.md release/

      - name: Zip
        run: |
          cd release
          zip -r TetrisCreativo.zip .

      - name: Create Release
        uses: softprops/action-gh-release@v2
        with:
          tag_name: v${{ github.run_number }}
          name: Tetris Creativo v${{ github.run_number }}
          draft: false
          prerelease: false
          files: release/TetrisCreativo.zip
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
