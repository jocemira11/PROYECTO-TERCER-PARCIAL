#include <SFML/Graphics.hpp>
#include "Tetris.hpp"

int main(){
    const int cols = 10, rows = 20, cellSize = 32;
    const int boardW = cols*cellSize;
    const int sidebarW = 220;
    sf::RenderWindow window(sf::VideoMode(boardW + sidebarW, rows*cellSize), "Tetris Creativo");
    window.setFramerateLimit(60);

    Tetris game(cols, rows, cellSize);
    sf::Clock clock;

    while(window.isOpen()){
        sf::Event e;
        while(window.pollEvent(e)){
            if(e.type == sf::Event::Closed) window.close();
            game.handleEvent(e);
        }

        float dt = clock.restart().asSeconds();
        game.update(dt);

        window.clear(sf::Color(12, 12, 18));
        game.draw(window);
        window.display();
    }
    return 0;
}
